---
import LanguageProvider from './LanguageProvider.astro';

const navItems = [
  { name: 'Home', url: '#', key: 'nav.home' },
  { name: 'Nosotros', url: '#about', key: 'nav.about' },
  { name: 'Servicios', url: '#services', key: 'nav.services' },
  { name: 'Reservar', url: 'https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona', isButton: true, key: 'nav.book' },
];
---

<LanguageProvider />

<header id="main-header" class="fixed w-full text-white z-50 transition-all duration-500 bg-transparent py-6">
  <nav class="container mx-auto px-4 flex justify-between items-center">
    <!-- Logo/Brand as a link to home -->
    <a href="#" class="flex items-center hover:opacity-80 transition duration-300">
      <div class="w-12 h-12 flex items-center justify-center mr-3">
        <img src="/images/ps-logo3.png" alt="Private Studio Logo" class="w-10 h-10 object-contain rounded-xl" />
      </div>
    </a>
    
    <!-- Mobile menu button, Phone and Reservar -->
    <div class="flex items-center gap-3 md:hidden">
      <a 
        href="tel:+34624367153"
        class="bg-white/10 backdrop-blur-md text-white p-2 rounded-md hover:bg-white/20 transition duration-300 flex items-center"
        title="Llamar: +34 624 367 153"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
        </svg>
      </a>
      <a 
        href="https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona"
        class="bg-beige-100 text-black px-4 py-2 rounded-md font-bold hover:bg-white transition duration-300 text-sm uppercase tracking-tight"
        data-i18n="nav.book"
      >
        Reservar
      </a>
      <button id="menu-toggle" class="p-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    
    <!-- Desktop menu -->
    <ul class="hidden md:flex space-x-10 items-center">
      {navItems.map(item => (
        <li>
          <a 
            href={item.url} 
            data-i18n={item.key}
            class={item.isButton ? 
              "bg-beige-100 text-black px-8 py-2.5 rounded-none font-bold hover:bg-white transition duration-300 uppercase tracking-widest text-sm" : 
              "hover:text-beige-300 transition duration-300 uppercase tracking-[0.2em] text-xs font-bold"}
          >
            {item.name}
          </a>
        </li>
      ))}
      
      <!-- Language Switcher -->
      <li class="flex items-center gap-2 ml-4 text-xs font-bold tracking-widest border-l border-white/20 pl-6">
        <button onclick="window.setLanguage('es')" class="lang-btn hover:text-white transition-colors" data-lang="es">ES</button>
        <span class="text-gray-500">|</span>
        <button onclick="window.setLanguage('en')" class="lang-btn hover:text-white transition-colors" data-lang="en">EN</button>
      </li>
    </ul>
  </nav>
</header>

<!-- Mobile menu - Moved outside header -->
<div id="mobile-menu" class="fixed inset-0 bg-black/95 z-[60] flex-col items-center justify-center text-center hidden transition-all duration-300">
  <button id="close-menu" class="absolute top-6 right-6 text-white p-2">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
  <div class="mb-12">
    <img src="/images/ps-logo3.png" alt="Private Studio Logo" class="w-20 h-20 mx-auto object-contain rounded-2xl" />
  </div>
  <ul class="text-3xl space-y-10 font-black uppercase tracking-tighter text-white">
    {navItems.map(item => (
      <li>
        <a href={item.url} class="hover:text-beige-400 transition-colors" data-i18n={item.key}>{item.name}</a>
      </li>
    ))}
    
    <!-- Map Button -->
    <li class="pt-4">
      <a href="https://maps.app.goo.gl/g1CY1yPGPptzhyWx7" target="_blank" class="flex items-center gap-3 text-sm font-bold tracking-widest uppercase border border-white/20 px-8 py-3 rounded-full hover:bg-white/10 transition-all text-beige-100">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        <span data-i18n="nav.map">CÃ³mo llegar</span>
      </a>
    </li>

    <!-- Mobile Lang Switch -->
    <li class="flex items-center justify-center gap-4 mt-8 pt-8 border-t border-white/10 w-24 mx-auto">
        <button onclick="window.setLanguage('es')" class="lang-btn text-xl hover:text-beige-400 transition-colors" data-lang="es">ES</button>
        <span class="text-gray-600 text-xl">|</span>
        <button onclick="window.setLanguage('en')" class="lang-btn text-xl hover:text-beige-400 transition-colors" data-lang="en">EN</button>
    </li>
  </ul>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('main-header');
    
    // Scroll handling
    const handleScroll = () => {
      if (!header) return;
      if (window.scrollY > 50) {
        header.classList.add('bg-black/95', 'backdrop-blur-md', 'py-4', 'shadow-2xl');
        header.classList.remove('bg-transparent', 'py-6');
      } else {
        header.classList.add('bg-transparent', 'py-6');
        header.classList.remove('bg-black/95', 'backdrop-blur-md', 'py-4', 'shadow-2xl');
      }
    };

    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Initial check

    // Mobile menu toggle
    const menuToggle = document.getElementById('menu-toggle');
    const closeMenu = document.getElementById('close-menu');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('#mobile-menu a');
    
    menuToggle?.addEventListener('click', () => {
      mobileMenu?.classList.remove('hidden');
      mobileMenu?.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
    
    closeMenu?.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      mobileMenu?.classList.remove('flex');
      document.body.style.overflow = '';
    });
    
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
        mobileMenu?.classList.remove('flex');
        document.body.style.overflow = '';
      });
    });
  });
</script>