---
const navItems = [
  { name: 'Home', url: '#' },
  { name: 'Servicios', url: '#services' },
  { name: 'Reservar', url: 'https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona', isButton: true },
];
---

<header class="fixed w-full bg-black text-white z-50">
  <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
    <!-- Logo/Brand as a link to home -->
    <a href="#" class="flex items-center hover:opacity-80 transition duration-300">
      <div class="w-12 h-12 flex items-center justify-center mr-3">
        <img src="/images/ps-logo.png" alt="Private Studio Logo" class="w-10 h-10 object-contain overflow-hidden" />
      </div>
      <span class="text-2xl font-bold"></span>
    </a>
    
    <!-- Mobile menu button, Phone and Reservar -->
    <div class="flex items-center gap-3 md:hidden">
      <a 
        href="tel:+34624367153"
        class="bg-gray-800 text-white p-2 rounded-md hover:bg-gray-700 transition duration-300 shadow-lg hover:shadow-red-600/30 flex items-center"
        title="Llamar: +34 624 367 153"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
        </svg>
      </a>
      <a 
        href="https://booksy.com/es-es/90283_private-studio_barberia_48863_barcelona"
        class="bg-white text-black px-4 py-2 rounded-md font-semibold hover:bg-gray-200 transition duration-300 shadow-lg hover:shadow-red-600/30 text-sm"
      >
        Reservar
      </a>
      <button id="menu-toggle">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    
    <!-- Desktop menu -->
    <ul class="hidden md:flex space-x-8 items-center">
      {navItems.map(item => (
        <li>
          <a 
            href={item.url} 
            class={item.isButton ? 
              "bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200 transition duration-300 shadow-lg hover:shadow-red-600/30" : 
              "hover:text-gray-300 transition duration-300"}
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-95 z-50 flex-col items-center justify-center text-center hidden">
      <button id="close-menu" class="absolute top-4 right-4 text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <div class="mb-8">
        <div class="w-20 h-20 mx-auto flex items-center justify-center">
          <img src="/images/ps-logo.png" alt="Private Studio Logo" class="w-16 h-16 object-contain overflow-hidden" />
        </div>
      </div>
      <ul class="text-2xl space-y-8">
        {navItems.map(item => (
          <li>
            <a 
              href={item.url} 
              class={item.isButton ? 
                "bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200 transition duration-300 shadow-lg hover:shadow-red-600/30" : 
                "hover:text-gray-300 transition duration-300"}
            >
              {item.name}
            </a>
          </li>
        ))}
        <li>
          <a 
            href="tel:+34624367153"
            class="bg-gray-800 text-white px-6 py-3 rounded-md hover:bg-gray-700 transition duration-300 shadow-lg hover:shadow-red-600/30 flex items-center justify-center gap-3 text-xl"
            title="Llamar: +34 624 367 153"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            +34 624 367 153
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const closeMenu = document.getElementById('close-menu');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('#mobile-menu a');
    
    menuToggle?.addEventListener('click', () => {
      mobileMenu?.classList.remove('hidden');
      mobileMenu?.classList.add('flex');
      document.body.style.overflow = 'hidden';
    });
    
    closeMenu?.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      mobileMenu?.classList.remove('flex');
      document.body.style.overflow = '';
    });
    
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
        mobileMenu?.classList.remove('flex');
        document.body.style.overflow = '';
      });
    });
  });
</script> 