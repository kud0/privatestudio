<div id="membership-popup" class="fixed inset-0 z-[100] flex items-center justify-center px-4 opacity-0 pointer-events-none transition-opacity duration-500">
  <!-- Backdrop -->
  <div id="popup-backdrop" class="absolute inset-0 bg-black/60 backdrop-blur-sm transition-opacity duration-500"></div>

  <!-- Modal Card -->
  <div class="relative bg-white w-full max-w-md p-8 shadow-2xl transform scale-95 transition-all duration-500 delay-100 border border-beige-200" id="popup-content">
    <!-- Close Button -->
    <button id="close-popup" class="absolute top-4 right-4 text-gray-400 hover:text-black transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Content -->
    <div class="text-center space-y-6">
      <div class="inline-block px-3 py-1 bg-black text-white text-[10px] font-bold tracking-[0.2em] uppercase" data-i18n="popup.new">
        Novedad
      </div>
      
      <h3 class="text-3xl font-black uppercase tracking-tight leading-none">
        <span data-i18n="popup.title.1">Únete al Club</span><br>
        <span class="text-beige-500" data-i18n="popup.title.2">Private Studio</span>
      </h3>
      
      <p class="text-gray-600 text-sm font-medium leading-relaxed px-4" data-i18n="popup.desc">
        Descubre nuestros nuevos <strong class="text-black">Packs de Suscripción</strong>. Mantén tu estilo impecable todo el mes con ventajas exclusivas y prioridad en reservas.
      </p>

      <div class="pt-2">
        <a href="#services" id="view-plans-btn" class="inline-block w-full bg-black text-white font-bold uppercase tracking-widest text-xs py-4 hover:bg-beige-900 transition-colors duration-300" data-i18n="popup.cta">
          Ver Planes y Precios
        </a>
        <button id="dismiss-popup" class="mt-4 text-[10px] font-bold uppercase tracking-widest text-gray-400 hover:text-black transition-colors" data-i18n="popup.dismiss">
          No gracias, solo mirar
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const popup = document.getElementById('membership-popup');
    const content = document.getElementById('popup-content');
    const closeBtn = document.getElementById('close-popup');
    const dismissBtn = document.getElementById('dismiss-popup');
    const viewPlansBtn = document.getElementById('view-plans-btn');
    const backdrop = document.getElementById('popup-backdrop');

    // Always show popup after delay
    setTimeout(() => {
      popup.classList.remove('opacity-0', 'pointer-events-none');
      content.classList.remove('scale-95');
      content.classList.add('scale-100');
    }, 2000); // Show after 2 seconds

    const closePopup = () => {
      popup.classList.add('opacity-0', 'pointer-events-none');
      content.classList.remove('scale-100');
      content.classList.add('scale-95');
    };

    closeBtn.addEventListener('click', closePopup);
    dismissBtn.addEventListener('click', closePopup);
    backdrop.addEventListener('click', closePopup);
    
    viewPlansBtn.addEventListener('click', () => {
      closePopup();
      // Smooth scroll is handled by CSS scroll-behavior: smooth on html element usually,
      // but if not, standard anchor link works.
    });
  });
</script>