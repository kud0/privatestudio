---
const products = [
  {
    nameKey: 'prod.p1.name',
    descKey: 'prod.p1.desc',
    image: '/images/stmnt-master_products-styling-matte-paste_1-1-ratio_2025.webp'
  },
  {
    nameKey: 'prod.p2.name',
    descKey: 'prod.p2.desc',
    image: '/images/stmnt-master-product_styling-curl-cream_1-1-ratio.webp'
  },
  {
    nameKey: 'prod.p3.name',
    descKey: 'prod.p3.desc',
    image: '/images/stmnt-master_products-styling-matte-paste_1-1-ratio_2025.webp'
  },
  {
    nameKey: 'prod.p4.name',
    descKey: 'prod.p4.desc',
    image: '/images/stmnt-master_products-styling-hair-spray_1-1-ratio_2025.webp'
  }
];
---

<section id="products" class="py-20 bg-beige-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-black text-center mb-4 uppercase tracking-tighter" data-i18n="prod.title">PRODUCTOS PREMIUM</h2>
    <p class="text-beige-900/60 text-center max-w-2xl mx-auto mb-12 uppercase tracking-widest text-xs font-bold" data-i18n="prod.subtitle">Solo productos de calidad</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {products.map(product => (
        <div class="bg-white p-6 shadow-md hover:shadow-lg transition duration-300">
          <div class="mb-4 overflow-hidden">
            <img 
              src={product.image} 
              alt="Product" 
              class="w-full h-64 object-cover grayscale hover:grayscale-0 transition duration-500"
            />
          </div>
          <h3 class="text-xl font-bold mb-2 uppercase tracking-tight" data-i18n={product.nameKey}></h3>
          <p class="text-gray-600 text-sm leading-relaxed" data-i18n={product.descKey}></p>
        </div>
      ))}
    </div>
  </div>
</section>