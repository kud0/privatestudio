  { day: 'Miércoles', hours: '11:00 - 13:00, 14:50 - 20:00' },
  { day: 'Jueves', hours: '11:00 - 13:00, 14:50 - 20:00' },
  { day: 'Viernes', hours: '11:00 - 14:00' },
  { day: 'Sábado', hours: '10:00 - 14:00' },
